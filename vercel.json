{
    "functions": {
      "api/*.php": {
        "runtime": "vercel-php@0.6.0"
      }
    },
    "builds": [
      { "src": "/public/**", "use": "@vercel/static" }
    ],
    "routes": [
      { "src": "/uploads/(.*)", "dest": "/public/uploads/$1" },
      { "src": "/(.*)", "dest": "/api/index.php" }
    ]
  }
  